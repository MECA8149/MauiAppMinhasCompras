<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.RelatorioCategorias"
             Title="Relatório por Categoria">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Fechar" Clicked="ToolbarItem_Fechar_Clicked" />
    </ContentPage.ToolbarItems>

    <RefreshView IsRefreshing="{Binding IsRefreshing}">
        <CollectionView x:Name="categoriasCollection"
                        ItemsSource="{Binding Categorias}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="15" Margin="10" BackgroundColor="#f8f9fa" CornerRadius="10">
                        <Grid ColumnDefinitions="100,100">
                            <!-- Categoria à esquerda -->
                            <Label Text="{Binding Key}" 
                                   FontSize="16" 
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Black}"
                                   VerticalOptions="Center"/>

                            <!-- Valor à direita -->
                            <Label Grid.Column="1"
                                   Text="{Binding Value, StringFormat='{0:C}'}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray600}"
                                   VerticalOptions="Center"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </RefreshView>
</ContentPage>
