<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.RelatorioCategorias"
             Title="RelatÃ³rio por Categoria">

    <RefreshView IsRefreshing="{Binding IsRefreshing}">
        <CollectionView x:Name="categoriasCollection">
            <!-- NOME DEVE SER EXATAMENTE ESTE -->
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="15" Margin="10" BackgroundColor="#f8f9fa">
                        <Grid ColumnDefinitions="*,Auto">
                            <VerticalStackLayout>
                                <Label Text="{Binding Key}" 
                                       FontSize="16" 
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Primary}"/>
                                <Label Text="{Binding Value, StringFormat='Total: {0:C}'}" 
                                       FontSize="14"/>
                            </VerticalStackLayout>
                            <Label Grid.Column="1"
                                   Text="{Binding Value, StringFormat='{0:C}'}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Secondary}"
                                   VerticalOptions="Center"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </RefreshView>
</ContentPage>